<div class="ui equal width grid">

  <div class="column">
    <center><h2 class="ui header">Descripción</h2></center>
  </div>

  <div class="column">
    <div class="container">
      <div class="row">
        <center><h2 class="ui header">Inicia Sesión</h2></center>
      </div>
      <div class="row">
        <div class="container">
            <div class="row">
              <div class="container">
                <form class="col s12">

                  <div class="row">
                    <div class="col s12">
                      <label id="mail">Ingresa tu correo</label>
                        <div class="ui left icon input">
                          {{input id="mail" type="email" placeholder="corre electrónico" value=email}}
                          <i class="mail icon"></i>
                        </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col s12">
                      <label >Ingresa tu contraseña</label>
                      <div class="ui left icon input">
                        {{input type="password" placeholder="contraseña" value=password}}
                        <i class="lock icon"></i>
                      </div>
                    </div>
                  </div>

                  {{#if errorMsg}}
                    <div class="row">
                      <div class="ui negative message">
                        <!-- <i class="close icon"></i> -->
                        <div class="header">
                        Error :c
                        </div>
                        <p>{{errorMsg}}</p>
                    </div>
                    </div>
                  {{/if}}

                  <div class="row">
                    <center><button class="ui blue submit button" {{action 'signIn' 'email'}}>
                      Ingresa
                    </button></center>
                  </div>

                </form>
              </div>
            </div>
            <div class="row">
              <div class="ui horizontal divider transparent">
                o ingresa con
              </div>
            </div>
            <div class="row">
              <center>
                <button class="ui circular facebook icon button">
                  <i class="facebook icon"></i>
                </button>
                <button class="ui circular twitter icon button">
                  <i class="twitter icon"></i>
                </button>
                <button class="ui circular google plus icon button">
                  <i class="google plus icon"></i>
                </button>
              </center>
            </div>

        </div>
      </div>
    </div>
  </div>

</div>
