
<div class="container">

  <div class="row">

    <!-- <div class=""> -->
      <h2 class=""><i class="circular user icon"></i>  Crea tu cruenta</h2>
      <br>
    <!-- </div> -->

    <form class="col s8" {{action 'signup' on='submit'}}>
      <div class="row">
        <div class="input-field col s6">
          {{input id="first_name" type="text" class="validate" value=nombre}}
          <label for="first_name">Nombre(s)</label>
        </div>
        <div class="input-field col s6">
          {{input id="last_name" type="text" class="validate" value=apellidos}}
          <label for="last_name">Apellidos</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input id="email" type="email" class="validate" value=email}}
          <label for="email">Correo Electrónico</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          {{input id="password" type="password" class="validate" value=password}}
          <label for="password">Contraseña</label>
        </div>
        <div class="input-field col s6">
          {{input id="passwordConfirmation" type="password" class="validate" value=passwordConfirmation}}
          <label for="passwordConfirmation">Confirma tu contraseña</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">phone</i>
          {{input id="icon_telephone" type="tel" class="validate" value=tel}}
          <label for="icon_telephone">Teléfono</label>
        </div>
      </div>

      {{#if errorMsg}}
        <div class="row">
          <div class="ui negative message">
            <i class="close icon"></i>
            <div class="header">
            Error :c
            </div>
            <p>{{errorMsg}}</p>
          </div>
        </div>
      {{/if}}

      <center>
          <button class="ui secondary basic button">Crear cuenta</button>
      </center>
    </form>

    <div class="col s4">
      <div class="container">
        <center>
          <div class="row">
              <h4>Registrate con </h4>
          </div>
          <div class="row">
            <button class="ui facebook button" {{action 'signupWithProvider' 'facebook'}}>
              <i class="facebook icon"></i>
              Facebook
            </button>
          </div>
          <div class="row">
            <button class="ui twitter button">
              <i class="twitter icon"></i>
              Twitter
            </button>
          </div>
          <div class="row">
            <button class="ui google plus button" {{action 'signupWithProvider' 'google'}}>
              <i class="google plus icon"></i>
              Google
            </button>
          </div>
        </center>
      </div>
    </div>

  </div>


</div>
