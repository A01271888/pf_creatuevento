
<div class="container">

  <div class="">
    <h2 class=""><i class="circular user icon"></i>  Registraste</h2>
    <br>
  </div>

  <div class="row">
    <form class="col s12" {{action 'signup' on='submit'}}>
      <div class="row">
        <div class="input-field col s6">
          {{input id="first_name" type="text" class="validate" value=nombre}}
          <label for="first_name">Nombre(s)</label>
        </div>
        <div class="input-field col s6">
          {{input id="last_name" type="text" class="validate" value=apellidos}}
          <label for="last_name">Apellidos</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input id="email" type="email" class="validate" value=email}}
          <label for="email">Correo Electrónico</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          {{input id="password" type="password" class="validate" value=password}}
          <label for="password">Contraseña</label>
        </div>
        <div class="input-field col s6">
          {{input id="passwordConfirmation" type="password" class="validate" value=passwordConfirmation}}
          <label for="passwordConfirmation">Confirma tu contraseña</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">phone</i>
          {{input id="icon_telephone" type="tel" class="validate" value=tel}}
          <label for="icon_telephone">Teléfono</label>
        </div>
      </div>

      {{#if errorMsg}}
        <div class="ui negative message">
          <i class="close icon"></i>
          <div class="header">
          Error :c
          </div>
          <p>{{errorMsg}}</p>
        </div>
      {{/if}}

      <p>
        <button class="ui secondary basic button">Crear cuenta</button>
      </p>


    </form>
  </div>
</div>
