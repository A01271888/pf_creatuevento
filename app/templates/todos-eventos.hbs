{{menu-admin estadoI="" estadoE="active" doCerrarSesion=(action 'cerrarSesion')}}

<div class="ui segment">
    <div class="row">
      <div class="col s5">
        <h2>Todos los eventos</h2>
      </div>
      <div class="col s7">
        {{#link-to 'crearEvento'}}
          <a class="btn-floating btn-large waves-effect waves-light red" ><i class="plus icon"></i></a>
        {{/link-to}}
      </div>
</div>

    {{#each model as |evento|}}
    <div class="ui divided items">
      <div class="item">
        <div class="image">
          <!-- <i class="birthdayicon"></i> -->
          <img width="30" height="30" src=evento.picEvento>
        </div>
        <div class="content">
          {{#link-to 'detalles-evento' evento.id}}
            <a class="header">{{evento.nombre}}</a>
          {{/link-to}}
          <div class="meta">
              <span class="cinema">Creado por: {{creador.data.nombre}}</span>
          </div>
          <div class="description">
            <p> <i class="calendar icon"></i> {{evento.fecha}}</p>
            <p> <i class="wait icon"></i> {{evento.horaInicio}}</p>
            <p> <i class="home icon"></i> {{evento.salon}}</p>
          </div>
          <div class="extra">
            <div class="ui label">{{evento.tipoEvento}}</div>
            <div class="ui label"><i class="info circle icon"></i>{{evento.estado}}</div>
          </div>
        </div>
      </div>
    </div>

    <div class="divider">
    </div>
    <br>
    {{/each}}
</div>
