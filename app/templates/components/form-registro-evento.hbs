<div class="container">
  <div class="row">
    <div class="col s12">
      <label for="nombre">Nombre</label>
        {{input id="nombre" type="text" value=evento.nombre}}
      </div>
  </div>
  <div class="row">
    <div class="col s6">
      <label for="fecha">Fecha</label>
      <!-- <input id="fecha" type="text" class="datepicker"> -->
      {{input id="fecha" type="date" value=evento.fecha}}
    </div>
    <div class="col s6">
      <label for="hr">Hora de Inicio</label>
      <!-- <input id="hr" type="text" class="timepicker"> -->
      {{input id="hr" type="time" value=evento.horaInicio}}
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <select>
        <option value="" disabled selected>Selecciona el tipo de evento</option>
        <option value="1">Pedas</option>
        <option value="2">Pedas 2</option>
        <option value="3">Pedas 3</option>
      </select>
      <label>Tipo de evento</label>
    </div>
  </div>

  <div class="row">
    <button type="button" name="button"{{action 'registraEvento' }}>Siguente Paso</button>
  </div>
</div>


<script type="text/javascript">
  $(document).ready(function() {
    $('select').material_select();
  });

</script>
